@using EmprestimoLivros.Enums
@model Usuario
@{
    ViewData["title"] = "Editar Usuário";
}

<style>


    .container-cadastro {
        width: 580px;
        background: rgba(234, 191, 255, 0.4);
        border-radius: 16px;
        box-shadow: 0 4px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(5px);
        -webkit-backdrop-filter: blur(5px);
        border: 1px solid rgba(255, 255, 255, 0.3);
        padding: 20px 19px;
        margin: 0 auto;
        margin-top: 90px; /* Add margin-top to separate from the navbar */
    }
</style>
<div class="container-cadastro">

    <div class="mb-5 text-center">
        <h1 style="background-color: #3c005a; color: white">Edição de Usuário</h1>
    </div>

    <form method="post" asp-controller="Usuario" asp-action="Editar">
        @* pegando o Id da asp-route *@
        <input type="hidden" asp-for="Id"/>
        <div class="mb-3">
            <label for="Nome" class="form-label">Nome:</label>
            <input type="text" class="form-control" asp-for="Nome" id="nome" placeholder="Digite o nome do usuário">
            <span class="text-danger" asp-validation-for="Nome"></span>
        </div>


        <div class="mb-3">
            <label for="Email" class="form-label">Email:</label>
            <input type="text" class="form-control" asp-for="Email" id="email" placeholder="Digite o email do usuário">
            <span class="text-danger" asp-validation-for="Email"></span>

        </div>

        <div class="mb-3">
            <select class="form-select" asp-for="Perfil" aria-label="Perfil do usuário:">
                <option selected>Perfil do usuário: </option>
                <option value="@PerfilEnum.Admin">Administrator</option>
                <option value="@PerfilEnum.Padrao">Padrão</option>
            </select>

        </div>

       @*  <div class="mb-3">
            <label for="senha" class="form-label">Senha: </label>
            <input type="password" class="form-control" asp-for="Senha" id="senha" placeholder="Digite a senha do usuário">
            <span class="text-danger" asp-validation-for="Senha"></span>

        </div> *@


        <div class="d-flex gap-5 mt-5">
            <button type="submit" class="btn w-50" style="background-color: #3c005a; color: white">Editar</button>
            <a class="btn w-50" style="background-color: #800080; color: white" asp-controller="Usuario" asp-action="Index">Voltar</a>
        </div>

    </form>
</div>

